<!-- Add some custom styles for the timeline -->
<style>
.timeline {
    position: relative;
    margin: 0 auto;
    padding: 1rem;
    list-style: none;
    max-width: 1000px;
}

.timeline-item {
    margin-bottom: 2rem;
    padding-left: 40px;
    position: relative;
}

.timeline-item h4 {
    margin: 0;
    font-size: 1.25rem;
}

.timeline-item:before {
    content: '';
    position: absolute;
    top: 0;
    left: 10px;
    height: 100%;
    width: 2px;
    background: #007bff;
}

.timeline-item:after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    height: 10px;
    width: 10px;
    border-radius: 50%;
    background: #007bff;
}
</style>
