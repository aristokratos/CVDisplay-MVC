<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - My Resume/CV</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/wwwroot/css/custom.css" rel="stylesheet" />

    <!-- Favicon (optional) -->
    <link rel="icon" href="~/wwwroot/images/favicon.ico" type="image/x-icon" />
</head>
<body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">My Online CV</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Cv/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Cv/Education">Education</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Cv/Experience">Experience</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Cv/Skills">Skills</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Cv/TaxCalculator">Tax Calculator</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content Section -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- Footer Section -->
    <footer class="footer bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>About Me</h5>
                    <p>I'm a passionate software developer with a focus on delivering efficient and scalable solutions. I specialize in web development, cloud computing, and cybersecurity.</p>
                </div>
                <div class="col-md-4">
                    <h5>Contact Information</h5>
                    <ul class="list-unstyled">
                        <li>Email: your.email@example.com</li>
                        <li>Phone: +123 456 7890</li>
                        <li>LinkedIn: <a href="#" class="text-light">LinkedIn Profile</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="/Cv/Education" class="text-light">Education</a></li>
                        <li><a href="/Cv/Experience" class="text-light">Experience</a></li>
                        <li><a href="/Cv/Skills" class="text-light">Skills</a></li>
                    </ul>
                </div>
            </div>
            <div class="text-center mt-4">
                <small>&copy; @DateTime.Now.Year Your Name. All rights reserved.</small>
            </div>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
    <!-- Bootstrap JS (Optional for interactivity like dropdowns or collapses) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
